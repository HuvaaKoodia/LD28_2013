<Root>

	<Rule Name="OnSearchPlayer1" Base="PlayerToPlayerOnStreet">
		<Event>SelectSearchLink</Event>
		<Criterion>Actor.Name E Policeman</Criterion>
		<Criterion>Target.Name E Junkie</Criterion>
		<Result>
			<Link>"Imma search u now." to PLAYER OnSearch</Link>
		</Result>
	</Rule>
	
	<Rule Name="OnSearchPlayer2" Base="PlayerToPlayerOnStreet">
		<Event>SelectInterrogateLink</Event>
		<Criterion>Actor.Name E Policeman</Criterion>
		<Criterion>Target.Name E Junkie</Criterion>
		<Result>
			<Link>"Imma interrogate u now." to PLAYER OnInterrogate</Link>
		</Result>
	</Rule>
</Root>