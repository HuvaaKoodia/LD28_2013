<Root>
	<!-- Base rules -->
	<Rule Name="PlayerToPlayerOnStreet">
		<Location>Street</Location>
		<Actor>PLAYER</Actor>
		<Target>PLAYER</Target>
	</Rule>

	<!-- Rules -->
	
	<Rule Name="OnClickPlayer" Base="PlayerToPlayerOnStreet">
		<Event>OnInteract</Event>
		<Criterion>Actor.Name E Policeman</Criterion>
		<Criterion>Target.Name E Junkie</Criterion>
		
		<Result>
			<Link>OnInteract_PoliceToJunkie_Street</Link>
		</Result>
	</Rule>
	
	<Rule Name="OnSearchPlayer1" Base="PlayerToPlayerOnStreet">
		<Event>OnSearch</Event>
		<Criterion>Actor.Name E Policeman</Criterion>
		<Criterion>Target.Drugs G 0</Criterion>
		<Result>
			<Link>OnSearch_PoliceToAny_Street_HasDrugs</Link>
			<Assign>Target.Drugs = 0</Assign>
		</Result>
	</Rule>
	
	<Rule Name="OnSearchPlayer2" Base="PlayerToPlayerOnStreet">
		<Event>OnSearch</Event>
		<Criterion>Actor.Name E Policeman</Criterion>
		<Criterion>Target.Drugs E 0</Criterion>
		<Result>
			<Link>OnSearch_PoliceToAny_Street_NoDrugs</Link>
		</Result>
	</Rule>
	
</Root>